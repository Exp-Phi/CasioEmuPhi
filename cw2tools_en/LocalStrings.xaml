<Window x:Class="cw2tools.LocalStrings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cw2tools"
        mc:Ignorable="d"
        Title="LocalStrings" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Language tables"/>
        <TextBox x:Name="LUT" HorizontalAlignment="Left" Width="100"/>
        <Button Content="Lookup" HorizontalAlignment="Left" Click="Button_Click"/>
        <TextBlock Text="Language index"/>
        <TextBox x:Name="LanguageCode" HorizontalAlignment="Left" Width="100" Text="0"/>
        <TextBlock Text="String table"/>
        <TextBox x:Name="StringLut" HorizontalAlignment="Left" Width="100"/>
        <Button Content="Lookup" HorizontalAlignment="Left" Click="Button_Click_1"/>
        <Button Content="Export csv" HorizontalAlignment="Left" Click="Button_Click_2"/>
        <TextBlock Text="String pool base address"/>
        <TextBox x:Name="StringsBase" HorizontalAlignment="Left" Width="100"/>
        <Button Content="Import csv" HorizontalAlignment="Left" Click="Button_Click_3"/>
    </StackPanel>
</Window>
